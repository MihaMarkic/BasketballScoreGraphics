<Window x:Class="BasketballScoreGraphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasketballScoreGraphics"
        xmlns:cnv="clr-namespace:BasketballScoreGraphics.Converters"
        xmlns:vm="clr-namespace:BasketballScoreGraphics.Engine.ViewModels;assembly=BasketballScoreGraphics.Engine"
        mc:Ignorable="d"
        d:DataContext="{d:DesignData IsDesignTimeCreatable=False, Type=vm:MainViewModel}"
        Title="MainWindow" Height="60" Width="700" WindowStyle="None" ResizeMode="NoResize">
    <Grid Margin="4,0,4,4">
        <Grid.Resources>
            <cnv:IntToColorConverter x:Key="IntToColorConverter" />
            <Style x:Key="Team" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="4" />
                <Setter Property="FontSize" Value="26" />
            </Style>
            <Style x:Key="Score" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Margin" Value="4" />
                <Setter Property="FontSize" Value="26" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>
            <Style x:Key="Quarter" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="26" />
                <Setter Property="FontWeight" Value="Normal" />
            </Style>
            <Style x:Key="QuarterTitle" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontSize" Value="8" />
                <Setter Property="FontWeight" Value="Normal" />
            </Style>
            <Style x:Key="Fouls" TargetType="local:Fouls">
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Height" Value="7" />
            </Style>
            <Style x:Key="TeamColor" TargetType="Border">
                <Setter Property="Margin" Value="0,4" />
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="BorderBrush" Value="DarkGray" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="60" />            
            <ColumnDefinition Width="60" />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />            
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="3" Grid.RowSpan="2" Background="LightGray" />
        <Border Style="{StaticResource TeamColor}" >
            <Border.Background>
                <SolidColorBrush Color="{Binding HomeColor, Mode=OneWay, Converter={StaticResource IntToColorConverter}}" />
            </Border.Background>
        </Border>
        <TextBlock Style="{StaticResource Team}" Grid.Column="1" Text="{Binding HomeTeam}" HorizontalAlignment="Right" />
        <TextBlock Style="{StaticResource Team}" Grid.Column="5" Text="{Binding AwayTeam}" HorizontalAlignment="Left" />
        <TextBlock Style="{StaticResource Score}" Grid.Column="2" Text="{Binding HomeScore}" />
        <TextBlock Style="{StaticResource Score}" Grid.Column="4" Text="{Binding AwayScore}" />
        <TextBlock Style="{StaticResource Quarter}" Grid.Column="3" Text="{Binding Period}" />
        <!--<TextBlock Style="{StaticResource QuarterTitle}" Grid.Row="1" Grid.Column="3" Text="{Binding PeriodDescription}" />-->
        <local:Fouls Grid.Row="1" Style="{StaticResource Fouls}" Grid.Column="1" Number="{Binding HomeFouls}" />
        <local:Fouls Grid.Row="1" Style="{StaticResource Fouls}" Grid.Column="5" Number="{Binding AwayFouls}" />
        <Border Grid.Column="6" Style="{StaticResource TeamColor}">
            <Border.Background>
                <SolidColorBrush Color="{Binding AwayColor, Mode=OneWay, Converter={StaticResource IntToColorConverter}}" />
            </Border.Background>
        </Border>
    </Grid>
</Window>
