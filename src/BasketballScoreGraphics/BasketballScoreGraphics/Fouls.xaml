<UserControl x:Class="BasketballScoreGraphics.Fouls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasketballScoreGraphics"
             mc:Ignorable="d" 
             d:DesignHeight="6" d:DesignWidth="80">
    <Grid x:Name="grid">
        <Grid.Resources>
            <Style x:Key="Item" TargetType="Border">
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="BorderThickness" Value=".5" />
                <Setter Property="Margin" Value="1,0,1,0" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Style="{StaticResource Item}" />
        <Border Style="{StaticResource Item}" Grid.Column="1" />
        <Border Style="{StaticResource Item}" Grid.Column="2" />
        <Border Style="{StaticResource Item}" Grid.Column="3" />
        <Border Style="{StaticResource Item}" Grid.Column="4" />
    </Grid>
</UserControl>
